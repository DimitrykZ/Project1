@model Start_1.Models.Supplement

@{
    ViewBag.Title = "Добавление товара";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    string director;
    string genre;
    uint cost;
}

<h2>Добавление товара</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Режиссер", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("director", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("director", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Жанр фильма", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("genre", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("genre", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Стоимость товара", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("cost", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("cost", "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="hidden" name="id" value="@ViewBag.id">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Просмотр пополнения", "SuppleView", "Look")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
