
@{
    ViewBag.Title = "Поиск клиента";
    Layout = "~/Views/Shared/_Layout1.cshtml";

}

<h2>Поиск Клиента</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Введите имя клиента", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("name", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("name", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Найти" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Просмотр клиентов", "ClientView", "Look")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
